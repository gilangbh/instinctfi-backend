# Database
DATABASE_URL="postgresql://username:password@localhost:5432/instinct_fi?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Solana
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_WS_URL="wss://api.mainnet-beta.solana.com"
SOLANA_PRIVATE_KEY="your-solana-private-key-here"

# Drift Protocol
DRIFT_RPC_URL="https://drift-api.example.com"
DRIFT_API_KEY="your-drift-api-key"
ENABLE_PRICE_WEBSOCKET="true"  # Set to "false" to disable Binance WebSocket (uses REST API only)

# App Configuration
NODE_ENV="development"
PORT=3001
API_VERSION="v1"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_PORT=3002

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Trading Configuration
MIN_DEPOSIT_USDC=10
MAX_DEPOSIT_USDC=100
MAX_PARTICIPANTS_PER_RUN=100
PLATFORM_FEE_PERCENTAGE=15
DEFAULT_RUN_DURATION_MINUTES=120
DEFAULT_VOTING_INTERVAL_MINUTES=10

# Chaos Modifiers
MIN_LEVERAGE=1
MAX_LEVERAGE=20
MIN_POSITION_SIZE_PERCENT=10
MAX_POSITION_SIZE_PERCENT=100

