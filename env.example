# Server Configuration
PORT=3001
WS_PORT=3002
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=http://localhost:8081

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/instinct_fi?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Trading Configuration
MIN_DEPOSIT_USDC=10
MAX_DEPOSIT_USDC=100
MAX_PARTICIPANTS_PER_RUN=100
PLATFORM_FEE_PERCENTAGE=15
DEFAULT_RUN_DURATION_MINUTES=120
DEFAULT_VOTING_INTERVAL_MINUTES=10
LOBBY_DURATION_MINUTES=10
MIN_LEVERAGE=1
MAX_LEVERAGE=20
MIN_POSITION_SIZE_PERCENT=10
MAX_POSITION_SIZE_PERCENT=100

# Automated Run Creation (Cron Job)
# Enable automatic run creation on a schedule
ENABLE_RUN_CREATION_CRON=false
# Cron schedule format: minute hour day month weekday
# Examples:
#   '0 * * * *'        -> Every hour at minute 0
#   '0 */2 * * *'      -> Every 2 hours
#   '0 0,12 * * *'     -> At 12:00 AM and 12:00 PM
#   '0 9,17 * * 1-5'   -> At 9 AM and 5 PM on weekdays
#   '*/5 * * * *'      -> Every 5 minutes (testing only)
RUN_CREATION_CRON_SCHEDULE=0 */2 * * *
# Auto-generated run configuration
AUTO_RUN_TRADING_PAIR=SOL/USD
AUTO_RUN_COIN=SOL
AUTO_RUN_MIN_DEPOSIT=500
AUTO_RUN_MAX_DEPOSIT=10000
AUTO_RUN_MAX_PARTICIPANTS=100
AUTO_RUN_LOBBY_DURATION=10
# Run duration: 2 hours (120 minutes) with 5-minute voting intervals = 24 rounds
AUTO_RUN_DURATION_MINUTES=120
AUTO_RUN_VOTING_INTERVAL=5
AUTO_RUN_TOTAL_ROUNDS=24

