# Server Configuration
PORT=3001
WS_PORT=3002
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=http://localhost:8081

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/instinct_fi?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Trading Configuration
MIN_DEPOSIT_USDC=10
MAX_DEPOSIT_USDC=100
MAX_PARTICIPANTS_PER_RUN=100
PLATFORM_FEE_PERCENTAGE=15
DEFAULT_RUN_DURATION_MINUTES=120
DEFAULT_VOTING_INTERVAL_MINUTES=10
MIN_LEVERAGE=1
MAX_LEVERAGE=20
MIN_POSITION_SIZE_PERCENT=10
MAX_POSITION_SIZE_PERCENT=100

# Drift Protocol Configuration
# RPC URL (can use same as SOLANA_RPC_URL)
#DRIFT_RPC_URL=https://api.mainnet-beta.solana.com
DRIFT_RPC_URL=https://api.devnet.solana.com
# Environment: mainnet-beta or devnet
DRIFT_ENVIRONMENT=devnet
# Trading keypair (JSON array format, can use same as SOLANA_PRIVATE_KEY)
DRIFT_TRADING_KEYPAIR=
# Enable REAL trading on Drift (set to 'true' only when ready!)
DRIFT_ENABLE_REAL_TRADING=true
# Default market for trading
DRIFT_DEFAULT_MARKET=SOL-PERP
# Drift program ID (rarely needs to change)
DRIFT_PROGRAM_ID=dRiftyHA39MWEi3m9aunc5MzRF1JYuBsbn6VPcn33UH
# Trading limits
DRIFT_MAX_LEVERAGE=10
DRIFT_MAX_POSITION_SIZE_USD=10000
# Price feed WebSocket
ENABLE_PRICE_WEBSOCKET=true

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com
SOLANA_NETWORK=devnet
# IMPORTANT: Generate a new keypair for production!
# Use: solana-keygen new -o backend-keypair.json
